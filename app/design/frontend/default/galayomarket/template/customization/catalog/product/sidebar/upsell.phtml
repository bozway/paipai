$setting = Mage::helper('yomarketsettings');
$width	=	$setting->getUpsell_Width(250);
$height	=	$setting->getUpsell_Height(250);
?>
<?php if(count($this->getItemCollection()->getItems())): ?>
<div class="block block-up-sell">
	<div class="block-title">
		<strong>
			<span><?php echo $this->__('Best Seller') ?></span>
		</strong>
	</div>
	<div class="block-content box">
		<?php foreach ($this->getItemCollection()->getItems() as $item): ?>
		<div class="item itemslider" style="margin-right: <?php echo $setting->getUpsell_Gutter() ?>px; width: <?php echo $setting->getUpsell_Width(); ?>px">	
			<div class="paipai-sidebar-elem left">
				<a href="<?php echo $item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($item->getName()) ?>">
					<?php Mage::helper('productlabels')->display($item);?>
					<img src="<?php echo $this->helper('catalog/image')->init($item, 'small_image')->resize($width, $height) ?>" alt="<?php echo $this->escapeHtml($item->getName()) ?>" />
				</a>
			</div>
			<div class="paipai-sidebar-elem right">
				<h3 class="product-name"><a href="<?php echo $item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($item->getName()) ?>"><?php echo $this->escapeHtml($item->getName()) ?></a></h3>
				<?php echo $this->getPriceHtml($item, true, '-upsell') ?>
			</div>
			<div class="paipai-sidebar-elem clr"><?php echo $item->getShortDescription()?></div>
		</div>
		<?php endforeach; ?>
	</div>
</div>
<?php endif; ?>