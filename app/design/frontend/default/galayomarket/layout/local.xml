<?xml version="1.0"?>
<layout>
	<default>
		<reference name="head">
			<action method="addItem">
				<type>skin_css</type>
				<name>css/paipai/local_wei.css</name>
			</action>
		</reference>
        <reference name="top.links">
            <remove name="wishlist_link"/>
        </reference>
        <reference name="area02">
            <reference name="top.menu">
                <remove name="galayomarket.catalog.topnav"/>
            </reference>
        </reference>
        <reference name="before_body_end">
            <remove name="store_switcher" />
            <remove name="color_variation" />
            <remove name="em_variation_tpl" />
            <remove name="mobile_view" />
        </reference>
	</default>

    <cms_index_index>
        <reference name="head">
            <action method="addJs">
                <script>slimscroll/jquery.slimscroll.min.js</script>
            </action>
            <action method="addJs">
                <name>paipai/homepage.js</name>
            </action>
        </reference>
    </cms_index_index>

	<catalogsearch_result_index translate="label">
        <label>Quick Search Form</label>
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
        </reference>
    </catalogsearch_result_index>

    <catalog_product_view>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/paipai/product_detail.css</name>
            </action>
        </reference> 
    	<reference name="product.info">
    		<action method="setTemplate">
    			<template>customization/catalog/product/view.phtml</template>
    		</action>
            <remove name="product.info.additional" />
            <remove name="product.info.additonal_collateral" />
    	</reference>
        <reference name="left">
            <block type="catalog/product_list_upsell" template="customization/catalog/product/sidebar/upsell.phtml" before="catalog.product.related" />
            <block type="cms/block" name="product-view-sidebar-ad">
                <action method="setBlockId">
                    <block_id>product_detail_sidebar_ad</block_id>
                </action>
            </block>
            <remove name="left.catalog.compare.sidebar" /> 
            <remove name="left.poll" />
        </reference>
    </catalog_product_view>

    <review_product_list>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/paipai/product_detail.css</name>
            </action>
        </reference> 
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
        <reference name="product.info">
            <action method="setTemplate">
                <template>customization/review/product/view.phtml</template>
            </action>
        </reference>
    </review_product_list>

    <customer_account_login translate="label">
        <label>Customer Account Login Form</label>
        <!-- Mage_Customer -->
        <remove name="left"/>
        <reference name="root">
            <action method="setTemplate"><template>page/1column.phtml</template></action>
        </reference>
    </customer_account_login>

    <customer_account translate="label">
        <label>Customer My Account (All Pages)</label>
        <reference name="left">
            <remove name="customer_account_navigation"/>
            <remove name="catalog.compare.sidebar"/>
            <remove name="wishlist_sidebar"/>
            <remove name="sale.reorder.sidebar"/>
            <block type="customer/account_navigation" name="paipai_customer_account_navigation" before="-" template="customer/account/navigation.phtml">
                <action method="addLink" translate="label" module="customer"><name>account</name><path>customer/account/</path><label>Paipai Account</label></action>
                <action method="addLink" translate="label" module="customer"><name>account_edit</name><path>customer/account/edit/</path><label>Account Information</label></action>
                <action method="addLink" translate="label" module="customer"><name>address_book</name><path>customer/address/</path><label>Address Book</label></action>
                <action method="addLink" translate="label" module="sales"><name>orders</name><path>sales/order/history/</path><label>My Orders</label></action>
                <action method="addLink" translate="label"><name>billing_agreements</name><path>sales/billing_agreement/</path><label>Billing Agreements</label></action>
                <action method="addLink" translate="label" module="review"><name>reviews</name><path>review/customer</path><label>My Product Reviews</label></action>
                <action method="addLink" translate="label" module="newsletter"><name>newsletter</name><path>newsletter/manage/</path><label>Newsletter Subscriptions</label></action>
            </block>
        </reference>
    </customer_account>

    <review_customer_index translate="label">
        <reference name="head">
            <action method="addCss"><stylesheet>css/paipai/custom_review_customer.css</stylesheet></action>
        </reference>
        <reference name="my.account.wrapper">
            <reference name="review_customer_list">
                <action method="setTemplate"><template>customization/review/customer/list.phtml</template></action>
            </reference>
        </reference>
    </review_customer_index>

    <customer_account_index>
        <reference name="customer_account_dashboard">
            <remove name="customer_account_dashboard_info1"/>
            <remove name="customer_account_dashboard_top"/>
        </reference>
    </customer_account_index>

    <contacts_index_index translate="label">
        <reference name="breadcrumbs">
            <action method="addCrumb">
                <crumbName>home</crumbName>
                <crumbInfo><label>Home</label><title>Home</title></crumbInfo>
            </action>
            <action method="addCrumb">
                <crumbName>contact_us</crumbName>
                <crumbInfo><label>Contact Us</label><title>Contact Us</title></crumbInfo>
            </action>
        </reference>
    </contacts_index_index>

    <checkout_onepage_index>
        <reference name="checkout.onepage">
            <action method="setTemplate">
                <template>customization/checkout/onepage.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/paipai/checkout.css</name>
            </action>
        </reference>
    </checkout_onepage_index>

    <checkout_cart_index>
        <reference name="checkout.cart">
            <action method="setTemplate">
                <template>customization/checkout/cart.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>css/paipai/checkout.css</name>
            </action>
        </reference>
    </checkout_cart_index>

    <catalog_category_layered>
        <reference name="left">
            <remove name="left.catalog.compare.sidebar"/>
        </reference>
    </catalog_category_layered>
</layout>